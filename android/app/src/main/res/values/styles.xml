        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/orange</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/orange</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/violet</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
